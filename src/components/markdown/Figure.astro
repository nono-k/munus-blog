---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  src: ImageMetadata;
  alt: string;
};

const { title, src, alt } = Astro.props;
---

<figure class="figure">
  <div class="figure__img">
    <Image src={src} alt={alt} width="1200" height="675" />
  </div>
  { title && (
    <figcaption class="figcaption">
      <Fragment set:html={title} />
    </figcaption>
  )}
</figure>

<style lang="scss">
  .figure {
    max-width: 800px;
    margin-inline: auto;
    --stack-space: 2rem;
    &__img {
      border-radius: 0.5rem;
      overflow: hidden;
    }
  }
  .figcaption {
    margin-top: 0.5rem;
    text-align: center;
    font-size: 0.875rem;
  }
</style>