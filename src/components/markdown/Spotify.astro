---
interface Props {
  trackId: string;
  albumId: string;
}

const { trackId, albumId } = Astro.props;
---

<div class="spotify">
  {
    trackId && <iframe src=`https://open.spotify.com/embed/track/${trackId}?utm_source=generator` width="100%" height="352" frameborder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
  }
  {
    albumId && <iframe src=`https://open.spotify.com/embed/album/${albumId}?utm_source=generator` width="100%" height="352" frameborder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
  }
</div>

<style lang="scss">
  .spotify {
    --stack-space: 2rem;
    max-width: 800px;
    margin-inline: auto;
    iframe {
      width: 100%;
      aspect-ratio: 16 / 9;
    }
  }
</style>
