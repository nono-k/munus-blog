---
interface Props {
  imageId: string;
  linkId: string;
  title: string;
  author: string;
}

const { imageId, linkId, title, author} = Astro.props;
---

<div class="amazon">
  <a href=`https://amzn.to/${linkId}` class="amazon__link -img" target="_blank">
    <img src=`https://m.media-amazon.com/images/I/${imageId}.jpg` alt=`${title}` width="170" height="220" loading="lazy">
  </a>
  <a href=`https://amzn.to/${linkId}` class="amazon__link -text" target="_blank">
    <span class="title">{title}</span>
    {author && <span class="author">{author}</span>}
    <span class="btn-regular btn">Amazon.co.jpで購入する</span>
  </a>
</div>

<style lang="scss" is:global>
  .amazon {
    --stack-space: 2rem;
    display: grid;
    grid-template-columns: 22% auto;
    border: 3px solid transparent;
    border-radius: 0.5rem;
    border: 1px solid var(--border-color);
    padding: 0.5rem 1rem;
    transition: background 0.3s;
    a {
      text-decoration: none;
    }
    @include mixin.phone {
      grid-template-columns: 1fr;
      padding: 0.75rem 1rem;
    }
    @media (hover: hover) {
      &:hover {
        background: var(--hover-color);

        .title,
        .author {
          color: var(--black);
        }

        a {
          background: transparent;
        }
      }
    }
    &__link {
      padding: 1rem;
      text-decoration: none;
      @include mixin.large {
        padding-right: 0;
      }
      @include mixin.phone {
        padding: 0;
      }
      &.-img {
        padding: 1rem;
        @include mixin.phone {
          max-width: 180px;
          margin-inline: auto;
        }
      }
      &.-text {
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding-inline: 1rem;
        @include mixin.phone {
          padding-inline: 0;
        }
      }
    }
    .title {
      max-height: 66px;
      overflow: hidden;
      @include mixin.phone {
        font-size: 0.875rem;
        max-height: unset;
      }
    }
    .author {
      font-size: 0.75rem;
      margin-top: 0.5rem;
    }
    .btn {
      margin-top: 1rem;
      padding: 0.5rem;
      border-radius: 0.25rem;
      font-size: 0.875rem;
      font-weight: 500;
      text-align: center;
      @include mixin.phone {
        margin-top: 1rem;
      }
    }
  }
  h3 + .amazon {
    margin-top: 1.5rem;
  }
</style>