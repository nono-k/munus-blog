---
<div class="stack" data-pagefind-body>
  <slot />
</div>

<style lang="scss" is:global>
  .stack {
    line-height: 1.75;
    font-size: 0.975rem;
    letter-spacing: 0.025em;

    @include mixin.phone {
      font-size: 0.9rem;
      line-height: 1.5;
    }

    > * + * {
      margin-top: var(--stack-space, 1.25rem);
      @include mixin.mobile {
        --stack-space: 1rem;
      }
    }
    meta + h2 {
      margin-top: 0;
    }
    h2 {
      --stack-space: 3.75rem;
      font-size: 1.25rem;

      @include mixin.phone {
        --stack-space: 2.5rem;
        font-size: 1.15rem;
      }

      &::before {
        content: '#';
        font-family: var(--ff-jp);
        margin-right: 0.25rem;
      }
      .anchor {
        font-size: 1rem;
      }
    }
    h3 {
      --stack-space: 3.25rem;
      font-size: 1.1rem;
      padding-bottom: 0.5rem;
      position: relative;
      @include mixin.phone {
        --stack-space: 2rem;
        font-size: 1rem;
      }
      &::before {
        content: '##';
        font-family: var(--ff-jp);
        letter-spacing: -0.1em;
        margin-right: 0.25rem;
      }
      + * {
        --stack-space: 1rem;
      }
    }
    h2, h3 {
      font-weight: 500;
      @include mixin.hover {
        .anchor {
          opacity: 1;
        }
      }
      .anchor {
        text-decoration: none;
        font-family: 'Kiwi Maru', sans-serif;
        border-radius: 0.35rem;
        padding: 0 0.5rem;
        margin-top: -0.25rem;
        margin-left: 0.2rem;
        opacity: 0;
        transition-property: background, color;
        transition-duration: 0.2s;
        @include mixin.hover {
          background: var(--black);
          color: var(--white);
        }
        @include mixin.mobile {
          display: none;
        }
      }
    }
    h2 + h3 {
      --stack-space: 1.5rem
    }
    h4 {
      font-size: 1.25rem;
      display: flex;
      align-items: center;
      column-gap: 0.5rem;
      @include mixin.phone {
        font-size: 1rem;
      }
      &::before {
        content: '';
        width: 0.5rem;
        height: 0.5rem;
        background: var(--black);
        border-radius: 50%;
      }
      + * {
        --stack-space: 1rem;
      }
    }
    p {
      & + p {
        margin-top: 2.5rem;

        @include mixin.phone {
          margin-top: 1.5rem;
        }
      }
    }
    ul, ol {
      margin-top: 1.5rem;
      padding-left: 0.5rem;
      > * + * {
        margin-top: 0.15rem;
      }
      ul {
        margin-top: 0.25rem;
        padding-left: 0;
      }
    }
    li {
      list-style: unset;
      margin-left: 1.5rem;

      .wikipedia {
        margin-top: 0.75rem;
        margin-bottom: 1.25rem;
      }
    }
    a {
      text-decoration-line: underline;
      text-decoration-style: dashed;
      text-decoration-thickness: 1px;
      text-underline-offset: 4px;
      padding: 0.25rem 0.5rem;
      border-radius: 0.5rem;
      transition-property: background-color, color;
      transition-timing-function: cubic-bezier(.4, 0, .2, 1);
      transition-duration: .15s;
      @include mixin.hover {
        background-color: var(--black);
        color: var(--white);
      }
    }
    strong {
      background: #f3ffc4;
      padding: 1px 3px;
      font-weight: 500;
      color: var(--black);
    }
    details {
      margin-top: 2rem;
      &[open] {
        summary {
          border-bottom-right-radius: 0px;
          border-bottom-left-radius: 0px;
          &::after {
            rotate: 180deg;
            margin-top: 0.2rem;
          }
        }
      }
      summary {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
        border: 1px solid var(--border-color);
        transition-property: background-color, color;
        transition-duration: 0.3s;
        cursor: pointer;
        @include mixin.hover {
          background-color: var(--black);
          color: var(--white);
        }
        &::after {
          content: '▼';
        }
        + div {
          padding: 1.5rem 1rem;
          border-bottom-right-radius: 0.25rem;
          border-bottom-left-radius: 0.25rem;
          border: 1px solid var(--border-color);
          border-top: none;
          background: var(--hover-color);
          @include mixin.mobile {
            padding-inline: 2rem 1rem;
          }
          > * + * {
            margin-top: 1.5rem;
          }
          figure {
            margin-bottom: 0;
          }
          > ul {
            margin-top: 0;
          }
        }
      }
    }
    span code {
      background: #dcdad3 !important;
      border-radius: 0.375rem;
      padding: 0.2rem 0.35rem;
      font-family: JetBrains Mono Variable,ui-monospace,SFMono-Regular,Menlo,Monaco,Consolas,Liberation Mono,Courier New,monospace;
      font-size: 0.85rem;
      .rehype-pretty-copy {
        display: none;
      }
    }
    table {
      --stack-space: 2rem;
    }
    blockquote {
      --stack-space: 2rem;
      padding: 0.5rem 0.75rem;
      padding-left: 1rem;
      border-left: 0.25rem solid var(--border-color);
    }
    hr {
      border: 0;
      margin-block: 2.5rem;
      display: flex;
      align-items: center;
      justify-content: center;

      &::before {
        content: '•••';
        font-size: 1.25em;
        letter-spacing: .2em;
      }
    }
  }
</style>