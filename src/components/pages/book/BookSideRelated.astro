---
import type { BooksTag } from '@/scripts/library/microcms';
import { getBooksByTags } from '@/scripts/library/microcms';

interface Props {
  tags: BooksTag[];
}

const { tags } = Astro.props;
const relatedBooks = await getBooksByTags(tags);

relatedBooks.contents.filter(book => book.tags.some(tag => tags.some(t => t.id === tag.id)));
---

<div class="side-title">Related Books</div>
<ul>
  {relatedBooks.contents.map(book => (
    <li class="text-ellipsis">
      <a href={`/books/${book.id}`}>{book.title}</a>
    </li>
  ))}
</ul>

<style lang="scss">
  ul {
    padding-block: 0.25rem 0.4rem;
    border-bottom: 1px solid var(--border-color);
    > * + * {
      margin-top: 0.15rem;
    }
    a {
      padding: 0.25rem 0.75rem;
      font-size: var(--fz-base);
      &::before {
        content: '';
        display: inline-block;
        width: 3px;
        height: 3px;
        background-color: var(--black);
        border-radius: 50%;
        margin-right: 0.5rem;
        vertical-align: middle;
      }
    }
  }
</style>